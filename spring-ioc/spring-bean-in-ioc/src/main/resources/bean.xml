<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--使用 <bean> 标签创建 bean
        id：唯一标识
        class：要创建对象的全限定名
    -->
    <bean id="userBeanWithXml" class="vip.openpark.bean.ioc.xml.bean.UserBeanWithXml">
        <property name="id" value="1"/>
        <property name="name" value="anthony"/>
        <property name="age" value="18"/>
    </bean>

    <bean id="bookBeanWithInstantiationProcessor" class="vip.openpark.bean.ioc.xml.bean.BookBeanWithXMLInstantiationProcessor">
        <property name="id" value="1"/>
        <property name="name" value="《王阳明心学》"/>
    </bean>
</beans>